extends layout
block body

  div.container(style="width: 100%; background-color: white; padding-top: 5px")
    row
      <!-- LEFT PANEL -->
      div.col-ws-2.col-md-2.col-lg-2.left-panel
        aside
          row
            span.db.col-sm-12.aside_title
              |Портал органов местного самоуправления
          row
            .col-sm-12.aside_logo
              a(href="/")
                img(src="img/gerb.png", alt="герб Ставрополя")
          row
            .col-sm-12
              div.aside_menu-btn.ib(ng-click="showMenu()")
                img(src="img/menu-icon.png", alt="")
                span.aside_menu-btn_title Меню
          row
            .col-sm-12.aside_title2
              span.aside_title2_span Ставропольский край
      <!-- MIDDLE PANEL -->
      div.col-sm-12.col-ws-8.col-md-8.col-lg-8.middle-panel
        row
          //- img(src='img/search.jpg', syle="height: 40px !important")
          h4(style="text-align: right")
            b Техническая поддержка: (8652) 748 768
        row.banner-panel
          .col-md-3
            img.img-responsive(src="img/8.jpg", alt="")
          .col-md-3
            img.img-responsive(src="img/7.jpg", alt="")
          .col-md-3
            img.img-responsive(src="img/9.jpg", alt="")
          .col-md-3
            img.img-responsive(src="img/6.jpg", alt="")
          .clear
        <!-- NAVIGATION BAR -->
        row
          .navbar.navbar-default(style="padding: 0; margin: 0")
            .container-fluid(style="padding: 0; margin: 0")
              .navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-center
                  li
                    a(href="/news") новости
                  li
                    a(href="/galleries") галерея
                  li
                    a(href="/usefuls") советы
                  li
                    a(href="/legislations") изменения в законодательстве
                  li
                    a(href="/gootToKnows") полезно знать
                  li
                    a(href="/portaldev") развитие портала
                  li
                    a(href="/adminPanel") admin
        <!-- BODY -->
        row
          div.documents(ng-view, style="display: block !important;")
      <!-- RIGHT PANEL -->
      div.col-ws-2.col-md-2.col-lg-2.right-panel
        row
          // кнопки сверху справа
          button.btn.btn-info.btn-block.btn-menu форум
          button.btn.btn-info.btn-block.btn-menu обратная связь
          button.btn.btn-info.btn-block.btn-menu контакты
          button.btn.btn-warn.btn-block.btn-menu
            img(src="img/glass-icon.png", alt="версия для слабовидящих")
        row
          // календарь
          div(style="display:inline-block; min-height:260px; margin-top: 10px;")
            div.well.well-sm(datepicker-append-to-body="true", uib-datepicker, ng-model="dt", datepicker-options="options")
        //- row
        //-   // часики
        //-   div.col-sm-6(style="padding-top: 11px; border: 1px solid white;background-color: #78BEE0;height: 80px")
        //-     p(style="font-size: 2.7em;color: white;") 14 окт
        //-   div.col-sm-6(style="padding-top: 11px; border: 1px solid white;background-color: #78BEE0;height: 80px")
        //-     p(style="font-size: 2.7em;color: white;") 11:20
        row
          // новости
          div.col-sm-12(style="border: 1px solid white;background-color: #78BEE0;height: 40px")
            p(style="font-size: 2em;color: white;") Новости:
            div(ng-repeat="n in [42, 43, 44, 45] track by $index")
              |{{n}}
    <!-- FOOTER -->
    row
      footer
          img(src="img/footer.jpg", style="width: 100%")
  <!-- SCRIPTS -->
  script(src="libs/jquery/dist/jquery.min.js")
  script(src="libs/tinymce/tinymce.js")
  script(src='libs/angular/angular.min.js')
  script(src='libs/locale-ru-ru.js')
  script(src='libs/angular-route/angular-route.min.js')
  script(src='libs/angular-sanitize/angular-sanitize.min.js')
  script(src='libs/angular-resource/angular-resource.min.js')
  script(src='libs/angular-bootstrap/ui-bootstrap-tpls.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.news.js')
  script(src='js/controllers.galleries.js')
  script(src='js/controllers.usefuls.js')
  script(src='js/controllers.legislations.js')
  script(src='js/controllers.goottoknows.js')
  script(src='js/controllers.portaldevs.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  //- script(src='js/components.js')
  script(src="libs/angular-ui-tinymce/src/tinymce.js")
